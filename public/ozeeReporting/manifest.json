{
    "manifest_version": 3,
    "name": "OZee Bug Reporting",
    "version": "1.4",
    "description": "The official OZee Bug Reporting extension to capture client feedback and bug reports seamlessly.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icon16.svg",
            "48": "icon48.svg",
            "128": "icon128.svg"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "logo.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
